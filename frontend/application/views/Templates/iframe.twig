{% import "Formbuilder/form.twig" as forms %}
{% import "Templates/helpers.twig" as helpers %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="Content-Language" content="en" />
        <title>{{ title }}</title>
        <link rel="shortcut icon" href="{{ getImage('favicon.png') }}">
		{% if canonical %}<link rel="canonical" href="{{ canonical }}"/>{% endif %}
        <meta name="keywords" content="{{ meta_keywords }}" />
        <meta name="description" content="{{ meta_description }}" />
        <meta name="copyright" content="{{ meta_copywrite }}" />

        {% if facebook_meta|length|default(0) %}
            <meta property="og:url" content="{{ facebook_meta.url }}" />
            <meta property="og:title" content="{{ title }}" />
            <meta property="og:image" content="{{ getUserfile(facebook_meta.image) }}" />
        {% endif %}

        <script type="text/javascript">
            var ROOT = '{{ ROOT }}';
            var LANG = '{{ LANG }}';
            var MEDIA = '{{ MEDIA }}';
        </script>

        {% autoescape false %}{{ assets['css'] }}{% endautoescape %}

    </head>

    <body class="iframe">

        {% block content %}{% endblock %}

{% autoescape false %}{{ assets['js'] }}{% endautoescape %}

    </body>
</html>