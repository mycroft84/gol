<span class="pager">
    <a href="{{ url }}/{{ current - 1 }}"{% if current == 1 %} style="visibility: hidden"{% endif %} class="prev">Előző</a>
        {% for item in numbers.min..numbers.max  %}
            {% if item == current %}
                <span>{{ item }}</span>
            {% else %}
                <a href="{{ url }}/{{ item }}">{{ item }}</a>
            {% endif %}

        {% endfor %}
    <a href="{{ url }}/{{ current + 1 }}"{% if current == max %} style="visibility: hidden"{% endif %} class="next">Következő</a>
</span>